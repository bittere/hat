{
  "name": "hat",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "tauri": "tauri",
    "setup:libvips": "bun run scripts/setup-libvips.ts",
    "build:tauri": "bun run setup:libvips && bun run build",
    "prepare": "husky",
    "lint": "biome check src",
    "lint:fix": "biome check --write --unsafe src",
    "typecheck": "tsc --noEmit"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx,js,jsx,json}": "biome check --no-errors-on-unmatched --files-ignore-unknown=true"
  },
  "dependencies": {
    "@base-ui/react": "^1.2.0",
    "@fontsource-variable/geist": "^5.2.8",
    "@solar-icons/react-perf": "^2.1.0",
    "@tauri-apps/api": "^2.10.1",
    "@tauri-apps/plugin-dialog": "^2.6.0",
    "@tauri-apps/plugin-opener": "^2.5.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "lucide-react": "^0.575.0",
    "react": "^19.2.4",
    "react-day-picker": "^9.13.2",
    "react-dom": "^19.2.4",
    "tailwind-merge": "^3.5.0",
    "tailwindcss-animate": "^1.0.7",
    "tw-animate-css": "^1.4.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.4.4",
